[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%aE>%Creset' --abbrev-commit --abbrev=8
[push]
	default = current
	followTags = true
[core]
	excludesfile = ~/.gitignore
	commentChar = auto
[pull]
	rebase = true
	default = current
	followTags = true
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
